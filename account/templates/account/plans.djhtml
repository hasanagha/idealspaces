{% block extra_js %}
    <script src="https://cdn.checkout.com/sandbox/js/checkout.js"></script>
    <script src="{% static "account/payment.js" %}"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.addons input').change(function() {
                var price = $(this).data('price');
                var saver_price = {{ packages.saver.price }};

                var total = 0;
                $('.addons input').each(function() {
                    if($(this).is(":checked")) {
                        total += $(this).data('price');
                    }
                })

                $('.package-saver').html('AED ' + (saver_price + total));

            });
        });
    </script>
{% endblock %}
